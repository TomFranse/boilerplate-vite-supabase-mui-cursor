{
  "extends": [
    "./node_modules/gts/.eslintrc.json",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "plugins": ["react", "react-hooks", "boundaries", "import", "unused-imports", "sonarjs"],
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "node": {
      "version": ">=18.0.0"
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      }
    },
    "boundaries/elements": [
      { "type": "pages", "pattern": "src/pages/**" },
      { "type": "routes", "pattern": "src/routes/**" },
      { "type": "components", "pattern": "src/components/**" },
      { "type": "features", "pattern": "src/features/**" },
      { "type": "layouts", "pattern": "src/layouts/**" },
      { "type": "hooks", "pattern": ["src/shared/hooks/**"] },
      { "type": "services", "pattern": ["src/shared/services/**"] },
      { "type": "utils", "pattern": ["src/shared/utils/**", "src/utils/**", "src/reportWebVitals.ts"] },
      { "type": "types", "pattern": ["src/types/**", "src/shared/types/**", "src/**/types/**", "src/vite-env.d.ts"] },
      { "type": "config", "pattern": ["src/config/**", "src/shared/config/**", "src/shared/constants.ts"] },
      { "type": "context", "pattern": "src/shared/context/**" },
      { "type": "theme", "pattern": "src/shared/theme/**" },
      { "type": "lib", "pattern": "src/lib/**" },
      { "type": "ai-capabilities", "pattern": "src/ai-capabilities/**" },
      { "type": "app", "pattern": ["src/App.tsx", "src/index.tsx", "src/App.tsx/**", "src/index.tsx/**"] }
    ],
    "boundaries/include": ["src/**/*.ts", "src/**/*.tsx"],
    "boundaries/ignore": [
      "src/_reference/**",
      "src/App.tsx",
      "src/index.tsx",
      "src/setupTests.ts",
      "**/*.test.ts",
      "**/*.test.tsx",
      "tests/**"
    ]
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/display-name": "off",
    "react-hooks/set-state-in-effect": "off",
    "complexity": ["warn", 10],
    "max-depth": ["warn", 4],
    "max-lines-per-function": ["warn", { "max": 100, "skipBlankLines": true, "skipComments": true }],
    "max-statements": ["warn", 20],
    "max-params": ["warn", 5],
    "sonarjs/cognitive-complexity": ["warn", 15],
    "boundaries/element-types": ["error", {
      "default": "disallow",
      "rules": [
        { 
          "from": "app", 
          "allow": ["pages", "routes", "components", "features", "layouts", "hooks", "services", "utils", "types", "config", "context", "theme", "lib", "ai-capabilities"],
          "message": "App is the root and can import anything"
        },
        { 
          "from": "pages", 
          "allow": ["components", "features", "layouts", "hooks", "services", "utils", "types", "routes", "config", "context", "theme", "lib", "ai-capabilities"],
          "message": "Pages can import from any lower layer"
        },
        { 
          "from": "routes", 
          "allow": ["pages", "components", "features", "layouts", "hooks", "types", "context", "config"],
          "message": "Routes define navigation, not business logic"
        },
        { 
          "from": "layouts", 
          "allow": ["components", "features", "hooks", "services", "utils", "types", "config", "context", "theme"],
          "message": "Layouts wrap pages and features"
        },
        { 
          "from": "features", 
          "allow": ["components", "features", "hooks", "services", "utils", "types", "config", "context", "theme", "ai-capabilities"],
          "message": "Features are self-contained domain modules"
        },
        { 
          "from": "components", 
          "allow": ["components", "features", "hooks", "services", "utils", "types", "config", "context", "theme"],
          "message": "Components cannot import from pages or routes"
        },
        { 
          "from": "hooks", 
          "allow": ["services", "utils", "types", "config", "context", "ai-capabilities"],
          "message": "Hooks orchestrate services, not UI"
        },
        { 
          "from": "services", 
          "allow": ["services", "utils", "types", "config"],
          "message": "Services are pure business logic"
        },
        { 
          "from": "utils", 
          "allow": ["utils", "types", "config", "services"],
          "message": "Utils are helper functions"
        },
        { 
          "from": "types", 
          "allow": ["types", "features"],
          "message": "Types can import other types and feature types"
        },
        { 
          "from": "config", 
          "allow": ["types"],
          "message": "Config only defines constants"
        },
        { 
          "from": "context", 
          "allow": ["hooks", "services", "utils", "types", "config", "features", "ai-capabilities"],
          "message": "Context provides state, not UI"
        },
        { 
          "from": "theme", 
          "allow": ["types"],
          "message": "Theme is pure styling configuration"
        },
        { 
          "from": "lib", 
          "allow": ["components", "hooks", "utils", "types", "theme"],
          "message": "Lib exports reusable code"
        },
        { 
          "from": "ai-capabilities", 
          "allow": ["ai-capabilities", "services", "utils", "types", "config", "features"],
          "message": "AI capabilities are specialized services"
        }
      ]
    }],
    "boundaries/no-unknown": ["error"],
    "boundaries/no-unknown-files": ["error"],
    "import/no-cycle": ["error", { "maxDepth": 3, "ignoreExternal": true }],
    "import/order": ["error", {
      "groups": ["builtin", "external", "internal", "parent", "sibling", "index", "type"],
      "pathGroups": [
        { "pattern": "react", "group": "builtin", "position": "before" },
        { "pattern": "@/**", "group": "internal", "position": "before" }
      ],
      "pathGroupsExcludedImportTypes": ["react"],
      "newlines-between": "always",
      "alphabetize": { "order": "asc", "caseInsensitive": true }
    }],
    "no-restricted-imports": ["error", {
      "patterns": [
        {
          "group": ["**/internal/**"],
          "message": "Import from the public API (index.ts) instead of internal modules"
        },
        {
          "group": ["../**"],
          "message": "Use path aliases (@/components, @/hooks, @/services, etc.) instead of relative parent imports (../). See tsconfig.json for available aliases."
        }
      ]
    }],
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": ["warn", {
      "vars": "all",
      "varsIgnorePattern": "^_",
      "args": "after-used",
      "argsIgnorePattern": "^_"
    }]
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "excludedFiles": ["migrations/**/*", "backups/**/*"],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    },
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.test.js",
        "src/setupTests.js"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "n/no-unsupported-features/es-syntax": "off",
        "n/no-missing-import": "off"
      }
    },
    {
      "files": ["*.config.js", "scripts/**/*.js", "src/setupProxy.js"],
      "parser": "espree",
      "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "n/no-extraneous-require": "off",
        "n/no-extraneous-import": "off"
      }
    },
    {
      "files": ["src/_reference/**/*.ts"],
      "rules": {
        "boundaries/no-unknown-files": "off"
      }
    }
  ]
}
